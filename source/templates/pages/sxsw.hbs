{{#extend "sxsw"}}
  {{#content "content"}}
<div class="mo-colorwrap mo-colorwrap--purple">
  <div class="mo-grid">
    <img src="images/sxsw.png" alt="" class="sxsw__image">

    <div class="counter" id="counter">
      <div>
        <span class="counter__days"></span>
        <div class="counter__text">Days</div>
      </div>
      <div>
        <span class="counter__hours"></span>
        <div class="smalltext">Hours</div>
      </div>
      <div>
        <span class="counter__minutes"></span>
        <div class="counter__text">Minutes</div>
      </div>
      <div>
        <span class="counter__seconds"></span>
        <div class="counter__text">Seconds</div>
      </div>
    </div>
  </div>
</div>
  {{/content}}
{{/extend}}